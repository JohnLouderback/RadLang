{
  "version": "2.0.0",
  "configurations": [
      {
          "name": "Debug ANTLR4 grammar",
          "type": "antlr-debug",
          "request": "launch",
          "input": "RadLexer/test-input.rad",
          "grammar": "RadLexer/Rad.g4",
          "actionFile": "grammars/exampleActions.js",
          "startRule": "start",
          "printParseTree": true,
          "visualParseTree": true,
          "args": ["-encoding", "UTF8"]
      },
      {
        "name": "Test VS Code Extension",
        "type": "extensionHost",
        "request": "launch",
        "args": [
            "--extensionDevelopmentPath=${workspaceFolder}"
        ]
    }
  ]
}